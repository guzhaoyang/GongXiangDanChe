
ul {
        height: auto;
            width: 90%;
        overflow: scroll;
}
ul li {
        margin: 2px;
        width: 100%;
        height: auto;
        border-radius: 10rpx;
        background-color: #ccc;
        padding: 10rpx;
        box-sizing: border-box;
}
.content {
        display: flex;
        margin-bottom: 20rpx;
}
.logo {
        height: 200rpx;
        width: 200rpx;
        margin-top: 200rpx;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 50rpx;
}
.text-area {
        display: flex;
        justify-content: center;
        border: 1px solid #ccc;
        width: 30%;
            border-radius: 10rpx;
}
.title {
        font-size: 36rpx;
        color: #8f8f94;
}
.header {
        width: 100%;
        height: 30rpx;
        padding: 30rpx;
}
.header input {
            width: 90%;
        border: 1px solid #ccc;
        border-radius: 10rpx;
}
